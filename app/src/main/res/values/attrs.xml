<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomView">
        <attr name="size" format="dimension" />
        <attr name="color" format="color" />
        <attr name="maxValue" format="float"/>
    </declare-styleable>


    <declare-styleable name="LoadingPointView">
        <attr name="loadText" format="string"/>   <!--正在加载。。。-->
        <attr name="loadTextSize" format="dimension"/>
        <attr name="loadTextColor" format="color"/>
        <attr name="pointColor" format="color"/>         <!--小圆点的颜色-->
        <attr name="pointSize" format="dimension"/>      <!--小圆点的大小-->
        <attr name="pointScaleVaule" format="float"/>  <!--小圆点最小缩放比例 默认0.4f -->
        <attr name="pointNum" format="integer"/>         <!-- 小圆点数量 默认三个-->
    </declare-styleable>



    <declare-styleable name="WheelView">
        <attr name="textSize" format="dimension"/>
        <attr name="textVerticalSpacing" format="dimension"/>
        <attr name="normalTextColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>
        <attr name="selectedLineColor" format="color"/>
        <attr name="visibilityCount" format="integer"/>
        <attr name="textGravity" format="integer">
            <flag name="top" value="0x30"/>
            <flag name="bottom" value="0x50"/>
            <flag name="left" value="0x03"/>
            <flag name="right" value="0x05"/>
            <flag name="center_vertical" value="0x10"/>
            <flag name="center_horizontal" value="0x01"/>
            <flag name="center" value="0x11"/>
            <flag name="start" value="0x00800003"/>
            <flag name="end" value="0x00800005"/>
        </attr>
        <attr name="selectPosition" format="integer"/>
    </declare-styleable>

</resources>